<div class="d-flex justify-content-between">
  <div class="d-flex">
    <%= image_tag suggestion.avatar.attached? ? suggestion.avatar : 'd-avatar1.png', class:"img-thumbnail rounded-circle", style:"width: 2.5rem" %>
    <div class="d-flex flex-column mx-2">
      <small class="fw-bold" style="max-width: 10rem; overflow:hidden; white-space: nowrap; text-overflow: ellipsis;">
        <%= link_to suggestion, class:"a-dicoration-none", data: {turbo: 'false'} do %><%= suggestion.username %><% end %>
      </small>
      <small class="text-muted" style="font-size:.7rem;max-width: 10rem; overflow:hidden; white-space: nowrap; text-overflow: ellipsis">Suggested For You By Instagram as he followed you before</small>
    </div>
  </div>
  <% if current_user.waiting_followings.include?(suggestion) %>
    <%= button_to cancel_request_path(user_id: suggestion.id), method: :delete, class:"btn bg-transparent border-0", data: {turbo: 'false'}   do %>
      <small class="fw-bold text-secondary">Cancel</small>
    <% end %>
  <% else %>
    <%= button_to follow_path(user_id: suggestion.id), method: :post, class:"btn", data: {turbo: 'false'} do %>
      <small class="fw-bold text-primary">Follow</small>
    <% end %>
  <% end %>
</div>
