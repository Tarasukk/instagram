<div id="post<%= comment.post_id%>ModalComment<%= comment.id %>">
  <div class="d-flex justify-content-between testtt">
    <div class="d-flex">
      <%= image_tag comment.user.avatar.attached? ? comment.user.avatar : 'd-avatar1.png', class:"img-thumbnail rounded-circle", style:"width: 2.5rem;max-height:2.5rem;" %>
      <div class="d-flex flex-column mx-2 justify-content-center">
        <small class="d-block card-text m-0 ">
          <%= link_to comment.user, class:"a-dicoration-none", data: {turbo: 'false'}   do %><span class="fw-bold me-1"><%= comment.user.username %></span><% end %>
        </small>
        <small><%= comment.body %></small>
        <small class="text-muted"> <%= time_ago_in_words(comment.created_at) %></small>
      </div>
    </div>
    <% if comment.user == current_user %>
      <%= button_to comment_path(id: comment.id), method: :delete, style: "background:none;border:none; " do %>
        <i class="fa fa-times"></i>
      <% end %>
    <% end %>
  </div>
</div>
