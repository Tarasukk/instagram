<div class="d-flex justify-content-between">
  <div class="d-flex">
    <%= image_tag liker.avatar.attached? ? liker.avatar : 'd-avatar1.png', class:"img-thumbnail rounded-circle", style:"width: 2.5rem" %>
    <div class="d-flex flex-column mx-2 justify-content-center">
      <small class="fw-bold" style="max-width: 10rem; overflow:hidden; white-space: nowrap; text-overflow: ellipsis;"><%= link_to liker, class:"a-dicoration-none", data: {turbo: 'false'} do %><%= liker.username %><% end %></small>
    </div>
  </div>
  <%= render 'layouts/shared/follow_state', user: liker %>
</div>
